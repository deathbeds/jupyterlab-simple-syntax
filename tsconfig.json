{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./lib"
  },
  "include": ["src/**/*", "src/@types/**/*"]
}
